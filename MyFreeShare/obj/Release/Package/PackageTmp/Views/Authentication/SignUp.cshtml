
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign Up</h2>
<div class="box">
    <div class="box-header">
        <div class="box-title">Sign Up Form</div>
    </div>
    <div class="box-body">
        <h4>@TempData["pesan"]</h4>
        <table>
            @using (Html.BeginForm("signup", "Authentication", FormMethod.Post))
            {
                <tr><td>Nama<input class="form-control" type="text" name="nama" required /></td></tr>
                <tr><td>Email<input class="form-control" type="email" name="email" required /></td></tr>
                <tr><td>Username<input class="form-control" type="text" name="username" required /></td></tr>
                <tr><td>Password<input class="form-control" type="password" name="password" required /></td></tr>
                <tr><td><input class="btn btn-default form-control" type="submit" value="Sign Up"/></td></tr>
            }
        </table>
    </div>
</div>