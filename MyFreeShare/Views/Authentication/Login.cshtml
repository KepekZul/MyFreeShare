
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box">
    <div class="box-header"><h2>Log In</h2></div>
    <div class="login-box-body">
        <table>
            @using (Html.BeginForm())
            {
                <tr><td>Username<input type="text" name="username" class="form-control" required/></td></tr>
                <tr><td>Password<input type="password" name="password" class="form-control" required/></td></tr>
                <tr><td><input class="btn btn-success form-control" type="submit" value="Log In" /></td></tr>
            }
        </table>
    </div>
</div>

